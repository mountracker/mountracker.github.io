<div class="skt-builder-block-wrapper skt-builder-home-section2-block skt-builder-home-section2-block-{{id}}" style="background-color: {{blockBackgroundColor}}; background-image: url({{blockBgImageUrl}}); padding-bottom: {{blockPaddingBottom}}px; padding-top: {{blockPaddingTop}}px; {{#if blockParallaxEffect}}background-attachment: fixed;{{/if}}">
	<div class="skt-builder-block-inner skt-builder-block-inner-{{id}}" style="{{#if blockAnimation}}visibility: hidden;{{/if}}">
		<div class="skt-builder-container">
        
        	<style>
            	.skt-builder-home-section2-block-{{id}} .woocommerce ul.products li.product .woocommerce-loop-product__title{color: {{productTitleColor}};}
				.skt-builder-home-section2-block-{{id}} .woocommerce ul.products li.product .woocommerce-loop-product__cat{color: {{productCategoryColor}};}
				.skt-builder-home-section2-block-{{id}} .woocommerce ul.products li.product .price{color: {{productPriceColor}};}
				.skt-builder-home-section2-block-{{id}} .woocommerce ul.products li.product:hover .woocommerce-loop-product__title{color: {{productTitleHoverColor}};}
				.skt-builder-home-section2-block-{{id}} .woocommerce ul.products li.product:hover{border-color: {{productHoverBorderColor}};}
				.skt-builder-home-section2-block-{{id}} .woocommerce ul.products li.product .button{background-color: {{blockButtonBgColor}}; color: {{blockButtonTextColor}};}
				.skt-builder-home-section2-block-{{id}} .woocommerce ul.products li.product .button:hover{background-color: {{blockButtonHoverBgColor}}; color: {{blockButtonHoverTextColor}};}
            </style>
        
        	{{#if blockTitle}}
                <div class="skt-builder-block-title" style="text-align: {{blockTitleAlign}};">
                    <h2 style="color: {{blockTitleColor}}; font-size: {{blockTitleFontSize}}px; {{#if blockTitleSeparator}}margin-bottom: 0;{{else}}margin-bottom: {{blockTitleMarginBottom}}px;{{/if}} text-align: {{blockTitleAlign}};"><small style="color:{{blockTitleSmallColor}}; font-size:{{blockTitleSmallFontSize}}px; margin-bottom:{{blockTitleSmallMarginBottom}}px;">{{blockTitleSmall}}</small>{{blockTitle}}</h2>
                    {{#if blockTitleSeparator}}
                        <div class="skt-builder-block-title-separator" style="background-color: {{blockTitleSeparatorColor}}; margin-bottom: {{blockTitleMarginBottom}}px;"></div>
                    {{/if}}
                </div>
            {{/if}}
            
            {{#if blockDescription}}
                <div class="skt-builder-block-description">{{{blockDescription}}}</div>
            {{/if}}
		</div>
	</div>
</div>

